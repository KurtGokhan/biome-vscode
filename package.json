{
	"name": "biome",
	"version": "3.0.0",
	"displayName": "Biome",
	"publisher": "biomejs",
	"license": "MIT OR Apache-2.0",
	"description": "Toolchain of the web",
	"icon": "resources/icons/biome.png",
	"categories": [
		"Formatters",
		"Linters"
	],
	"repository": "github:biomejs/biome-vscode",
	"homepage": "https://github.com/biomejs/biome-vscode#readme",
	"readme": "https://github.com/biomejs/biome-vscode#readme",
	"bugs": "https://github.com/biomejs/biome-vscode/issues",
	"sponsor": {
		"url": "https://github.com/sponsors/biomejs"
	},
	"scripts": {
		"build": "rollup --config rollup.config.ts --configPlugin esbuild",
		"dev": "rollup --watch --config rollup.config.ts --configPlugin esbuild",
		"prepackage": "pnpm run build",
		"package": "vsce package --out biome.vsix"
	},
	"main": "./out/main.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "biome.restart",
				"title": "Biome: Restart"
			}
		],
		"configuration": {
			"properties": {
				"biome.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Whether Biome is enabled",
					"scope": "resource"
				},
				"biome.configurationPath": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Path to a custom Biome configuration file.",
					"scope": "resource"
				},
				"biome.suggestInstallingGlobally": {
					"type": "boolean",
					"default": true,
					"description": "Whether to suggest installing Biome globally when opening files that do not belong to a project.",
					"scope": "resource"
				},
				"biome.requireConfiguration": {
					"type": "boolean",
					"default": false,
					"description": "Whether Biome requires a config file to start",
					"scope": "resource"
				},
				"biome.runFromTemporaryLocation": {
					"type": "boolean",
					"description": "Whether to copy the biome binary to run it from a temporary location. Defaults to true on Windows and false on other platforms.",
					"scope": "resource"
				},
				"biome.lsp.bin": {
					"oneOf": [
						{
							"type": "string",
							"description": "Path to a custom Biome binary. When this is set, the extension won't attempt to locate Biome automatically.",
							"default": "",
							"examples": [
								"/path/to/biome"
							]
						},
						{
							"type": "object",
							"uniqueItems": true,
							"description": "Platform-specific paths to a custom Biome binary. When this is set, the extension won't attempt to locate Biome automatically.",
							"examples": [
								{
									"linux-x64": "/path/to/biome",
									"linux-arm64-musl": "/path/to/biome",
									"darwin-arm64": "/path/to/biome",
									"win32-x64": "/path/to/biome.exe"
								}
							]
						}
					],
					"ignoreSync": true,
					"scope": "resource"
				},
				"biome.lsp.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"compact",
						"verbose"
					],
					"description": "Tracing level of the communications between the extension and the Biome Language Server.",
					"default": "off"
				},
				"biome.lspBin": {
					"type": "string",
					"default": "",
					"ignoreSync": true,
					"description": "(Deprecated) Path to a custom Biome binary. When this is set, the extension won't attempt to locate Biome automatically.",
					"deprecationMessage": "This setting has been deprecated and will be removed in a future version of the extension. Please use the `biome.lsp.bin` setting instead."
				}
			}
		},
		"icons": {
			"biome-logo": {
				"description": "Biome icon for light themes",
				"default": {
					"fontPath": "resources/icons/biome.woff",
					"fontCharacter": "\\E900"
				}
			}
		},
		"languages": [
			{
				"id": "biome_syntax_tree",
				"extensions": [
					".rast"
				]
			}
		],
		"grammars": [
			{
				"language": "biome_syntax_tree",
				"scopeName": "source.biome_syntax_tree",
				"path": "./resources/grammars/biome-syntax-tree.tmGrammar.json"
			}
		]
	},
	"engines": {
		"vscode": "^1.80.0"
	},
	"vsce": {
		"dependencies": false,
		"skipLicense": true
	},
	"dependencies": {
		"is-wsl": "^3.1.0",
		"vscode-languageclient": "^9.0.1",
		"vscode-uri": "^3.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0-beta.5",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.4",
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@types/node": "^22.15.3",
		"@types/vscode": "^1.80.0",
		"@vscode/vsce": "^3.3.2",
		"esbuild": "^0.25.3",
		"lefthook": "^1.11.12",
		"ovsx": "^0.10.2",
		"rollup": "^4.40.1",
		"rollup-plugin-esbuild": "^6.2.1",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.10.0"
}
